<script>
(function(){
	Pj.accordion('.accordion');

	var $elementApi;

	var APIS = {
		init() {
			$elementApi = Pj.accordion('.example-api', {
				onOpen: function(index) {
					log('open: ' + index, 'event')
				},
				onReady: function() {
					log('ready', 'event')
				},
				onClose: function(index) {
					log('close: ' + index, 'event')
				},
				onResize: function() {
					log('resize', 'event')
				}
			})
			console.log($elementApi)
		},
	  open() {
	  	$elementApi('open', 2)
	  },
	  close() {
	  	$elementApi('close', 2)
	  }
	}

	document.querySelector('.apis')
		.addEventListener('click', event => {
      const api = event.target.dataset.api;
      if (api) {
        APIS[api]()
      }
    })
  })();
</script>
