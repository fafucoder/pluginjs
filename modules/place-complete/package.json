  "homepage": "https://github.com/pluginjs/plugin.js",
  "version": "0.0.1",
  "category": "form",
  "main": "dist/place-complete.umd.js",
  "module": "dist/place-complete.esm.js",
  "cjs": "dist/place-complete.cjs.js",
  "source": "src/main.js",
  "css": {
    "source": "src/css/place-complete.scss",
    "main": "dist/place-complete.css",
    "min": "dist/place-complete.min.css"
