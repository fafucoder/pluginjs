<style>
section {
  position: relative;
  height: 300px;
  margin-bottom: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 930px;
}
.background {
  position: absolute;
  z-index: -1;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.card {
  background-color: #555555;
  width: 200px;
  height: 200px;
}
.inline {
  display: flex;
  & > div:not(:last-child) {
    margin-right: 50px;
  }
}
.element-conatiner {
  min-height: 1000px;
}
.element-conatiner > div:not(:last-child) {
  margin-bottom: 50px;
}
.background {
  display: flex;
  overflow: hidden;
  background-color: transparent;
  justify-content: center;
  align-items: center;
}

.background > img {
  width: auto;
  height: auto;
}

</style>
