<script>
$(function(){
  var easing = $('.easing').val();
  var duration = $('.duration').val();

  $('.easing').on('change', function(){
    easing = $(this).val();
  });
  $('.duration').on('change', function(){
    duration = $(this).val();
  });
  $('.api-scrollto').on('click', function() {
    var x = $(this).data('x');
    var y = $(this).data('y');

    // Pj.scroll.to(x, y, easing, duration);
    Pj.scroll.to({
      x: x,
      y: y,
      easing: easing,
      duration: duration,
      complete: function(x, y) {
        console.info('to: '+x+', '+y);
      }
    });
  });
  $('.api-scrolltox').on('click', function() {
    var value = $(this).data('value');

    Pj.scroll.toX(value, easing, duration, function(value) {
      console.info('to x: '+value);
    });
  });

  $('.api-scrolltoy').on('click', function() {
    var value = $(this).data('value');

    Pj.scroll.toY(value, easing, duration, function(value) {
      console.info('to y: '+value);
    });
  });

  $('.api-scrollbyx').on('click', function() {
    var value = $(this).data('value');

    Pj.scroll.byX(value, easing, duration, function(value) {
      console.info('by x : '+value);
    });
  });

  $('.api-scrollbyy').on('click', function() {
    var value = $(this).data('value');

    Pj.scroll.byY(value, easing, duration, function(value) {
      console.info('by y: '+value);
    });
  });

  $('.api-scrollby').on('click', function() {
    var x = $(this).data('x');
    var y = $(this).data('y');

    // Pj.scroll.by(x, y, easing, duration, complete);
    Pj.scroll.by({
      x: x,
      y: y,
      easing: easing,
      duration: duration,
      complete: function(x, y) {
        console.info('by: '+x+', '+y);
      }
    });
  });

  $('.api-scrolltop').on('click', function() {
    var selector = $(this).data('element');
    var element = $(selector).get(0);

    var offset = $(this).data('offset');

    // Pj.scroll.top(document.querySelector(selector), easing, duration, offset);
    Pj.scroll.top({
      element: element,
      easing: easing,
      offset: offset,
      duration: duration,
      complete: function(value) {
        console.info('top: '+value);
      }
    });
  });

  $('.api-scroll-intoview').on('click', function() {
    var selector = $(this).data('element');
    var element = $(selector).get(0);

    // Pj.scroll.intoView(document.querySelector(selector), easing, duration);
    Pj.scroll.intoView({
      element: element,
      easing: easing,
      duration: duration,
      complete: function(x, y) {
        console.info('intoView: '+x+', '+y);
      }
    });
  });

  $('.api-scroll-intoview-offset').on('click', function() {
    var selector = $(this).data('element');
    var element = $(selector).get(0);

    var offset = {
      top: $(this).data('offsetTop'),
      left: $(this).data('offsetLeft')
    };

    // Pj.scroll.intoView(document.querySelector(selector), easing, duration);
    Pj.scroll.intoView({
      element: element,
      easing: easing,
      offset: offset,
      duration: duration,
      complete: function(x, y) {
        console.info('intoView: '+x+', '+y);
      }
    });
  });

});
</script>
