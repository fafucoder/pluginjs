{
  "name": "@pluginjs/scrollable",
  "description": "A flexible modern scrollable js plugin.",
  "license": "GPL-3.0",
  "author": "Creation Studio Limited",
  "homepage": "https://pluginjs.com",
  "repository": {
    "url": "git@github.com:pluginjs/pluginjs.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/pluginjs/pluginjs/issues"
  },
  "version": "0.7.1",
  "category": "scroll",
  "main": "dist/scrollable.common.js",
  "module": "dist/scrollable.esm.js",
  "umd": "dist/scrollable.js",
  "unpkg": "dist/scrollable.js",
  "jsdelivr": "dist/scrollable.js",
  "source": "src/main.js",
  "style": "dist/scrollable.css",
  "sass": "src/css/scrollable.scss",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:scss",
    "build:js": "plugin script build-js",
    "build:md": "plugin script build-md",
    "build:scss": "plugin script build-scss",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "eslint ./src/**/*.js --fix",
    "lint:scss": "stylelint ./src/**/*.scss --fix",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "@pluginjs/classes": "^0.7.1",
    "@pluginjs/component": "^0.7.1",
    "@pluginjs/decorator": "^0.7.1",
    "@pluginjs/dom": "^0.7.1",
    "@pluginjs/easing": "^0.7.1",
    "@pluginjs/events": "^0.7.1",
    "@pluginjs/factory": "^0.7.1",
    "@pluginjs/is": "^0.7.1",
    "@pluginjs/scrollbar": "^0.7.1",
    "@pluginjs/styled": "^0.7.1",
    "@pluginjs/utils": "^0.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@pluginjs/browserslist-config": "^1.2.1",
    "@pluginjs/cli": "^0.7.1",
    "babel-jest": "^23.2.0",
    "holderjs": "^2.9.4",
    "jest": "^23.3.0",
    "jest-extended": "^0.7.2",
    "rename": "^1.0.4",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^4.0.0-beta.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0"
  },
  "engines": {
    "node": ">= 8",
    "npm": ">= 5"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "jest-extended",
    "verbose": true,
    "testURL": "http://localhost",
    "testPathIgnorePatterns": [
      "fixtures"
    ]
  },
  "browserslist": [
    "extends @pluginjs/browserslist-config"
  ]
}
