<script>
$(function(){
  var easing = document.querySelector('.easing').value;
  var duration = document.querySelector('.duration').value;
  var theme = document.querySelector('.theme').value;
  var animation = document.querySelector('.animation').value;

  var Api = {}
  function init() {
    Api = Pj.scrollTop('body', {
      theme: theme,
      easing: easing,
      duration: duration,
      animation: animation
    })
  }
  init();

  function destroy() {
    Api('destroy');
  }

  $('.easing').on('change', function(){
    easing = $(this).val();

    destroy();
    init();
  });
  $('.duration').on('change', function(){
    duration = $(this).val();

    destroy();
    init();
  });
  $('.theme').on('change', function(){
    theme = $(this).val();

    destroy();
    init();
  });
  $('.animation').on('change', function(){
    animation = $(this).val();

    destroy();
    init();
  });

  $('.api-init').on('click', function() {
    console.info('init');
    init();
  });

  $('.api-destroy').on('click', function() {
    console.info('destroy');
    Api('destroy');
  });

  $('.api-enable').on('click', function() {
    console.info('enable');
    Api('enable');
  });

  $('.api-disable').on('click', function() {
    console.info('disable');
    Api('disable');
  });
});
</script>
