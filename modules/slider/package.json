  },
  "dependencies": {
    "@pluginjs/arrows": "^0.6.6",
    "@pluginjs/breakpoints": "^0.6.5",
    "@pluginjs/classes": "^0.6.5",
    "@pluginjs/component": "^0.6.5",
    "@pluginjs/decorator": "^0.6.5",
    "@pluginjs/dom": "^0.6.5",
    "@pluginjs/events": "^0.6.5",
    "@pluginjs/factory": "^0.6.5",
