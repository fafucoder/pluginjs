  "license": "GPL-3.0",
  "author": "Creation Studio Limited",
  "homepage": "https://github.com/pluginjs/pluginjs",
  "version": "0.6.6",
  "category": "ui",
  "main": "dist/slider.common.js",
  "module": "dist/slider.esm.js",
  "source": "src/main.js",
  "css": {
    "source": "src/css/slider.scss",
    "main": "dist/slider.css",
    "min": "dist/slider.min.css"
  },
  "scripts": {
